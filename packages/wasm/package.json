{
  "name": "@web-csv-toolbox/wasm",
  "version": "0.11.0",
  "description": "A CSV Toolbox utilizing Web Standard APIs.",
  "type": "module",
  "main": "src/wasm.ts",
  "module": "src/wasm.ts",
  "types": "src/wasm.ts",
  "sideEffects": true,
  "exports": {
    ".": {
      "types": {
        "browser": "./src/wasm.browser.ts",
        "import": "./src/wasm.ts"
      },
      "import": "./src/wasm.ts",
      "browser": "./src/wasm.browser.ts",
      "default": "./src/wasm.ts"
    },
    "./package.json": "./package.json"
  },
  "files": ["dist", "README.md"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kamiazya/web-csv-toolbox.git",
    "directory": "packages/wasm"
  },
  "keywords": ["csv", "wasm", "web-streams", "web-streams-api"],
  "author": "Yuki Yamazaki <yuki@kamiazya.tech>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kamiazya/web-csv-toolbox/issues"
  },
  "publishConfig": {
    "provenance": true,
    "access": "public",
    "module": "dist/wasm.js",
    "types": "dist/wasm.d.ts",
    "exports": {
      ".": {
        "types": {
          "browser": "./dist/wasm.browser.d.ts",
          "import": "./dist/wasm.d.ts"
        },
        "import": "./dist/wasm.js",
        "browser": "./dist/wasm.browser.js",
        "default": "./dist/wasm.js"
      },
      "./package.json": "./package.json"
    }
  },
  "homepage": "https://kamiazya.github.io/web-csv-toolbox/",
  "scripts": {
    "build:wasm": "pnpm build:wasm:nodejs && pnpm build:wasm:web",
    "build:wasm:nodejs": "wasm-pack build . --target bundler --no-pack --out-dir ./src/lib/nodejs/build --out-name wasm",
    "build:wasm:web": "wasm-pack build . --target web --no-pack --out-dir ./src/lib/browser/build --out-name wasm",
    "build:js": "vite build",
    "build": "pnpm build:wasm && pnpm build:js"
  },
  "dependencies": {
    "@web-csv-toolbox/common": "workspace:^"
  },
  "devDependencies": {
    "@codecov/vite-plugin": "catalog:",
    "@rollup/pluginutils": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vite-plugin-dts": "catalog:",
    "vite-plugin-wasm": "^3.3.0"
  }
}
